# Makefile for compiling and linking an ARM assembly file into a binary

ASFLAGS := -mcpu=cortex-a55
OBJCOPYFLAGS := -O binary

OUTPUT_DIR := output
SOURCE_FILE := main.S
OBJECT_FILE := main32.o
ELF_FILE := main32.elf
BIN_FILE := $(OUTPUT_DIR)/main32.bin

all: $(BIN_FILE)

$(BIN_FILE): $(ELF_FILE)
	arm-none-eabi-objcopy $(OBJCOPYFLAGS) $< $@

$(ELF_FILE): $(OBJECT_FILE)
	arm-none-eabi-ld $(LDFLAGS) -o $@ $<

$(OBJECT_FILE): $(SOURCE_FILE)
	arm-none-eabi-as $(ASFLAGS) -o $@ $<

clean:
	rm -f $(OBJECT_FILE) $(ELF_FILE) $(BIN_FILE)

.PHONY: all clean